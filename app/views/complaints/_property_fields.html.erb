<%# Property complaint specific fields %>

<div class="form-row">
  <div class="form-group">
    <%= f.label :builder_name, "Builder/Developer Name *", class: "form-label" %>
    <%= f.text_field :builder_name,
                      class: "form-control",
                      placeholder: "Builder/Developer name",
                      required: true %>
  </div>
  
  <div class="form-group">
    <%= f.label :project_name, "Project Name *", class: "form-label" %>
    <%= f.text_field :project_name,
                      class: "form-control",
                      placeholder: "Project/Society name",
                      required: true %>
  </div>
</div>

<div class="form-row">
  <div class="form-group">
    <%= f.label :property_type, "Property Type", class: "form-label" %>
    <%= f.select :property_type,
                 options_for_select(PropertyComplaint.property_types.keys.map { |k| [k.titleize, k] }),
                 { prompt: "Select property type" },
                 class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :property_number, "Property/Unit Number", class: "form-label" %>
    <%= f.text_field :property_number,
                      class: "form-control",
                      placeholder: "Unit/Flat number" %>
  </div>
</div>

<div class="form-row">
  <div class="form-group">
    <%= f.label :booking_date, "Booking Date", class: "form-label" %>
    <%= f.date_field :booking_date, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :possession_date, "Promised Possession Date", class: "form-label" %>
    <%= f.date_field :possession_date, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :possession_status, "Current Possession Status", class: "form-label" %>
  <%= f.select :possession_status,
               options_for_select(PropertyComplaint.possession_statuses.keys.map { |k| [k.titleize, k] }),
               { prompt: "Select status" },
               class: "form-control" %>
</div>

<div class="form-row">
  <div class="form-group">
    <%= f.label :amount_paid, "Amount Paid (₹) *", class: "form-label" %>
    <%= f.number_field :amount_paid,
                        class: "form-control",
                        placeholder: "0.00",
                        min: 0,
                        step: 0.01,
                        required: true %>
  </div>
  
  <div class="form-group">
    <%= f.label :total_amount, "Total Property Value (₹) *", class: "form-label" %>
    <%= f.number_field :total_amount,
                        class: "form-control",
                        placeholder: "0.00",
                        min: 0,
                        step: 0.01,
                        required: true %>
  </div>
</div>

<div class="form-group">
  <%= f.label :nature_of_complaint, "Nature of Complaint *", class: "form-label" %>
  <%= f.select :nature_of_complaint,
               options_for_select(PropertyComplaint.nature_of_complaints.keys.map { |k| [k.titleize, k] }),
               { prompt: "Select nature of complaint" },
               class: "form-control",
               required: true %>
</div>

<div class="form-group">
  <%= f.label :builder_contact, "Builder Contact", class: "form-label" %>
  <%= f.telephone_field :builder_contact,
                        class: "form-control",
                        placeholder: "+91 XXXXX XXXXX" %>
</div>

<div class="form-group">
  <%= f.label :project_address, "Project Address", class: "form-label" %>
  <%= f.text_area :project_address,
                   class: "form-control",
                   placeholder: "Project location/address",
                   rows: 3 %>
</div>

<div class="form-group">
  <%= f.label :registration_number, "Registration Number", class: "form-label" %>
  <%= f.text_field :registration_number,
                    class: "form-control",
                    placeholder: "Property registration number (if registered)" %>
</div>
