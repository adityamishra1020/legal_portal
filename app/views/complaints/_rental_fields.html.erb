<div class="form-row">
  <div class="form-group">
    <%= f.label :landlord_name, "Landlord Name *", class: "form-label" %>
    <%= f.text_field :landlord_name,
                      class: "form-control",
                      placeholder: "Landlord name",
                      required: true %>
  </div>
  
  <div class="form-group">
    <%= f.label :tenant_name, "Tenant Name", class: "form-label" %>
    <%= f.text_field :tenant_name,
                      class: "form-control",
                      placeholder: "Your name" %>
  </div>
</div>

<div class="form-row">
  <div class="form-group">
    <%= f.label :landlord_contact, "Landlord Contact", class: "form-label" %>
    <%= f.telephone_field :landlord_contact,
                          class: "form-control",
                          placeholder: "+91 XXXXX XXXXX" %>
  </div>
  
  <div class="form-group">
    <%= f.label :property_type, "Property Type", class: "form-label" %>
    <%= f.select :property_type,
                 options_for_select(RentalComplaint.property_types.keys.map { |k| [k.titleize, k] }),
                 { prompt: "Select type" },
                 class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :property_address, "Property Address *", class: "form-label" %>
  <%= f.text_area :property_address,
                   class: "form-control",
                   placeholder: "Full property address",
                   rows: 3,
                   required: true %>
</div>

<div class="form-row">
  <div class="form-group">
    <%= f.label :monthly_rent, "Monthly Rent (₹)", class: "form-label" %>
    <%= f.number_field :monthly_rent,
                        class: "form-control",
                        placeholder: "0.00",
                        min: 0,
                        step: 0.01 %>
  </div>
  
  <div class="form-group">
    <%= f.label :security_deposit, "Security Deposit (₹)", class: "form-label" %>
    <%= f.number_field :security_deposit,
                        class: "form-control",
                        placeholder: "0.00",
                        min: 0,
                        step: 0.01 %>
  </div>
</div>

<div class="form-row">
  <div class="form-group">
    <%= f.label :lease_start_date, "Lease Start Date", class: "form-label" %>
    <%= f.date_field :lease_start_date, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :lease_end_date, "Lease End Date", class: "form-label" %>
    <%= f.date_field :lease_end_date, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :nature_of_complaint, "Nature of Complaint *", class: "form-label" %>
  <%= f.select :nature_of_complaint,
               options_for_select(RentalComplaint.nature_of_complaints.keys.map { |k| [k.titleize, k] }),
               { prompt: "Select nature of complaint" },
               class: "form-control",
               required: true %>
</div>

<div class="form-row">
  <div class="form-group">
    <%= f.label :rent_receipt_available, "Rent Receipt Available?", class: "form-label" %>
    <%= f.select :rent_receipt_available,
                 options_for_select([['No', false], ['Yes', true]]),
                 {},
                 class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :lease_agreement_available, "Lease Agreement Available?", class: "form-label" %>
    <%= f.select :lease_agreement_available,
                 options_for_select([['No', false], ['Yes', true]]),
                 {},
                 class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :additional_details, "Additional Details", class: "form-label" %>
  <%= f.text_area :additional_details,
                   class: "form-control",
                   placeholder: "Describe the issue in detail",
                   rows: 4 %>
</div>
