<% content_for(:title, "Analytics - Admin - JusticeHub") %>

<div class="admin-page">
  <div class="admin-header">
    <h1>Analytics Dashboard</h1>
    <p>Track platform performance and complaint statistics</p>
  </div>

  <div class="analytics-filters">
    <%= form_with url: admin_analytics_path, method: :get, local: true do |form| %>
      <div class="filter-group">
        <%= form.text_field :start_date, value: @start_date, class: "filter-input", type: "date" %>
        <%= form.text_field :end_date, value: @end_date, class: "filter-input", type: "date" %>
        <%= form.submit "Update", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="analytics-stats">
    <div class="stat-card">
      <div class="stat-icon blue">
        <i class="fas fa-chart-line"></i>
      </div>
      <div class="stat-info">
        <span class="stat-number"><%= @complaints_over_time.values.sum %></span>
        <span class="stat-label">Total Complaints</span>
        <span class="stat-period"><%= @start_date.strftime("%d %b") %> - <%= @end_date.strftime("%d %b %Y") %></span>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon green">
        <i class="fas fa-check-double"></i>
      </div>
      <div class="stat-info">
        <span class="stat-number"><%= @resolution_rate %>%</span>
        <span class="stat-label">Resolution Rate</span>
        <span class="stat-period">of total complaints</span>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon orange">
        <i class="fas fa-clock"></i>
        <% pending = @complaints_by_status[:pending].to_i + @complaints_by_status[:under_review].to_i %>
      </div>
      <div class="stat-info">
        <span class="stat-number"><%= pending %></span>
        <span class="stat-label">Pending Cases</span>
        <span class="stat-period">awaiting action</span>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon purple">
        <i class="fas fa-percentage"></i>
      </div>
      <div class="stat-info">
        <span class="stat-number"><%= @complaints_by_type.count %></span>
        <span class="stat-label">Complaint Types</span>
        <span class="stat-period">categories tracked</span>
      </div>
    </div>
  </div>

  <div class="analytics-grid">
    <div class="analytics-card">
      <h3>Complaints by Type</h3>
      <div class="chart-container">
        <% @complaints_by_type.each do |type, count| %>
          <div class="chart-bar">
            <div class="bar-label"><%= type.titleize %></div>
            <div class="bar-wrapper">
              <div class="bar-fill" style="width: <%= (count.to_f / @complaints_by_type.values.max * 100).round %>%"></div>
              <div class="bar-value"><%= count %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="analytics-card">
      <h3>Daily Complaint Trend</h3>
      <div class="trend-chart">
        <% max_count = @complaints_over_time.values.max.to_f %>
        <% @complaints_over_time.each do |date, count| %>
          <div class="trend-bar" style="height: <%= max_count > 0 ? (count.to_f / max_count * 100) : 0 %>%">
            <span class="trend-tooltip"><%= date.strftime("%d %b") %>: <%= count %></span>
          </div>
        <% end %>
      </div>
      <div class="trend-labels">
        <span><%= @complaints_over_time.keys.first&.strftime("%d %b") || 'Start' %></span>
        <span><%= @complaints_over_time.keys.last&.strftime("%d %b") || 'End' %></span>
      </div>
    </div>
  </div>
</div>

