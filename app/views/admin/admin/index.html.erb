<% content_for(:title, "Admin Dashboard - JusticeHub") %>

<div class="admin-page">
  <div class="admin-header">
    <h1>Admin Dashboard</h1>
    <p>Welcome to JusticeHub Admin Panel</p>
  </div>

  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon blue">
        <i class="fas fa-file-alt"></i>
      </div>
      <div class="stat-info">
        <span class="stat-number"><%= @stats[:total_complaints] %></span>
        <span class="stat-label">Total Complaints</span>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon orange">
        <i class="fas fa-clock"></i>
      </div>
      <div class="stat-info">
        <span class="stat-number"><%= @stats[:pending_complaints] %></span>
        <span class="stat-label">Pending Complaints</span>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon green">
        <i class="fas fa-check-circle"></i>
      </div>
      <div class="stat-info">
        <span class="stat-number"><%= @stats[:resolved_complaints] %></span>
        <span class="stat-label">Resolved Complaints</span>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon purple">
        <i class="fas fa-users"></i>
      </div>
      <div class="stat-info">
        <span class="stat-number"><%= @stats[:total_users] %></span>
        <span class="stat-label">Total Users</span>
      </div>
    </div>
  </div>

  <div class="admin-content">
    <div class="admin-section">
      <h2>Quick Actions</h2>
      <div class="quick-actions">
        <%= link_to admin_complaints_path, class: "action-btn" do %>
          <i class="fas fa-list"></i>
          <span>Manage Complaints</span>
        <% end %>
        <%= link_to admin_users_path, class: "action-btn" do %>
          <i class="fas fa-user-cog"></i>
          <span>Manage Users</span>
        <% end %>
        <%= link_to admin_analytics_path, class: "action-btn" do %>
          <i class="fas fa-chart-bar"></i>
          <span>View Analytics</span>
        <% end %>
      </div>
    </div>

    <div class="admin-section">
      <h2>Recent Complaints</h2>
      <div class="complaint-table">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Type</th>
              <th>Subject</th>
              <th>Status</th>
              <th>Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @recent_complaints.each do |complaint| %>
              <tr>
                <td>#<%= complaint.id %></td>
                <td><span class="type-badge"><%= complaint.complaint_type.titleize %></span></td>
                <td><%= complaint.subject.truncate(40) %></td>
                <td><span class="status-badge status-<%= complaint.status %>"><%= complaint.status.titleize %></span></td>
                <td><%= complaint.created_at.strftime("%d %b %Y") %></td>
                <td><%= link_to "View", complaint_path(complaint), class: "btn-small" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="admin-section">
      <h2>Complaints by Type</h2>
      <div class="type-summary">
        <% @complaints_by_type.each do |type, count| %>
          <div class="type-item">
            <span class="type-name"><%= type.titleize %></span>
            <span class="type-count"><%= count %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
.admin-page {
  padding: 100px 24px 60px;
  max-width: 1200px;
  margin: 0 auto;
}

.admin-header {
  margin-bottom: 32px;
}

.admin-header h1 {
  font-size: 32px;
  margin-bottom: 8px;
}

.admin-header p {
  color: #718096;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
  margin-bottom: 40px;
}

.stat-card {
  background: white;
  padding: 24px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  gap: 16px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

.stat-icon {
  width: 56px;
  height: 56px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: white;
}

.stat-icon.blue { background: linear-gradient(135deg, #4299e1, #3182ce); }
.stat-icon.orange { background: linear-gradient(135deg, #ed8936, #dd6b20); }
.stat-icon.green { background: linear-gradient(135deg, #48bb78, #38a169); }
.stat-icon.purple { background: linear-gradient(135deg, #9f7aea, #805ad5); }

.stat-info {
  display: flex;
  flex-direction: column;
}

.stat-number {
  font-size: 28px;
  font-weight: 700;
  color: #1a202c;
}

.stat-label {
  font-size: 14px;
  color: #718096;
}

.admin-section {
  background: white;
  padding: 24px;
  border-radius: 12px;
  margin-bottom: 24px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

.admin-section h2 {
  font-size: 20px;
  margin-bottom: 20px;
  padding-bottom: 12px;
  border-bottom: 1px solid #e2e8f0;
}

.quick-actions {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 16px;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
  padding: 24px;
  background: #f7fafc;
  border-radius: 10px;
  transition: all 0.2s;
  text-decoration: none;
}

.action-btn:hover {
  background: #edf2f7;
  transform: translateY(-2px);
}

.action-btn i {
  font-size: 32px;
  color: #4299e1;
}

.action-btn span {
  font-weight: 500;
  color: #2d3748;
}

.complaint-table table {
  width: 100%;
  border-collapse: collapse;
}

.complaint-table th,
.complaint-table td {
  padding: 12px;
  text-align: left;
  border-bottom: 1px solid #e2e8f0;
}

.complaint-table th {
  font-weight: 600;
  color: #718096;
  font-size: 13px;
  text-transform: uppercase;
}

.type-badge {
  background: #e2e8f0;
  padding: 4px 10px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 500;
}

.status-badge {
  padding: 4px 10px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 500;
}

.status-submitted { background: #bee3f8; color: #2b6cb0; }
.status-under_review { background: #fefcbf; color: #975a16; }
.status-lawyer_assigned { background: #c6f6d5; color: #276749; }
.status-in_progress { background: #e9d8fd; color: #6b46c1; }
.status-resolved { background: #9ae6b4; color: #22543d; }
.status-closed { background: #cbd5e0; color: #4a5568; }

.btn-small {
  padding: 6px 12px;
  background: #4299e1;
  color: white;
  border-radius: 4px;
  font-size: 13px;
  text-decoration: none;
}

.btn-small:hover {
  background: #3182ce;
}

.type-summary {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 12px;
}

.type-item {
  display: flex;
  justify-content: space-between;
  padding: 12px 16px;
  background: #f7fafc;
  border-radius: 8px;
}

.type-name {
  color: #4a5568;
}

.type-count {
  font-weight: 600;
  color: #2d3748;
}
</style>
