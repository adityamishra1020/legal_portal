  background: #f7fafc;
  font-weight: 600;
  color: #4a5568;
  font-size: 13px;
  text-transform: uppercase;
}

.user-cell {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-weight: 500;
}

.user-phone {
  font-size: 12px;
  color: #718096;
}

.role-badge {
  padding: 4px 10px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 500;
}

.role-badge.admin { background: #fed7d7; color: #c53030; }
.role-badge.lawyer { background: #e9d8fd; color: #6b46c1; }
.role-badge.staff { background: #fefcbf; color: #975a16; }
.role-badge.user { background: #c6f6d5; color: #276749; }

.status-badge.active {
  background: #c6f6d5;
  color: #276749;
}

.status-badge.inactive {
  background: #fed7d7;
  color: #c53030;
}

.status-badge {
  padding: 4px 10px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 500;
}

.action-buttons {
  display: flex;
  gap: 8px;
}

.btn-action {
  padding: 6px 12px;
  background: #4299e1;
  color: white;
  border-radius: 4px;
  font-size: 12px;
  text-decoration: none;
}

.btn-action:hover {
  background: #3182ce;
}

.btn-role {
  background: #805ad5;
}

.btn-role:hover {
  background: #6b46c1;
}

.btn-warning {
  background: #ed8936;
}

.btn-warning:hover {
  background: #dd6b20;
}

.btn-success {
  background: #48bb78;
}

.btn-success:hover {
  background: #38a169;
}

