<% content_for(:title, "Manage Users - Admin - JusticeHub") %>

<div class="admin-page">
  <div class="admin-header">
    <h1>Manage Users</h1>
    <p>View and manage all registered users</p>
  </div>

  <div class="filter-bar">
    <%= form_with url: admin_users_path, method: :get, local: true do |form| %>
      <div class="filter-group">
        <%= form.select :role, options_for_select(User.roles.keys, params[:role]), { include_blank: "All Roles" }, class: "filter-select" %>
        <%= form.select :active, options_for_select([['Active', 'true'], ['Inactive', 'false']], params[:active]), { include_blank: "All Status" }, class: "filter-select" %>
        <%= form.submit "Filter", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="users-list">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Status</th>
          <th>Last Login</th>
          <th>Joined</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><strong>#<%= user.id %></strong></td>
            <td>
              <div class="user-cell">
                <span class="user-name"><%= user.name.titleize %></span>
                <% if user.phone.present? %>
                  <span class="user-phone"><%= user.phone %></span>
                <% end %>
              </div>
            </td>
            <td><%= user.email %></td>
            <td>
              <span class="role-badge <%= user.role %>"><%= user.role.titleize %></span>
            </td>
            <td>
              <span class="status-badge <%= user.is_active ? 'active' : 'inactive' %>">
                <%= user.is_active ? 'Active' : 'Inactive' %>
              </span>
            </td>
            <td><%= user.last_login_at ? user.last_login_at.strftime("%d %b %Y") : 'Never' %></td>
            <td><%= user.created_at.strftime("%d %b %Y") %></td>
            <td>
              <div class="action-buttons">
                <% if user.role != 'admin' %>
                  <%= link_to "Role", "#", class: "btn-action btn-role", data: { id: user.id, current: user.role } %>
                <% end %>
                <% if user.id != current_user.id %>
                  <%= link_to user.is_active ? "Deactivate" : "Activate", admin_toggle_user_status_path(user), method: :patch, class: "btn-action #{user.is_active ? 'btn-warning' : 'btn-success'}" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Role Update Modal -->
<div id="roleModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Update User Role</h3>
      <span class="close">&times;</span>
    </div>
    <%= form_with url: admin_update_user_role_path(0), method: :patch, local: true do |form| %>
      <input type="hidden" name="id" id="userId">
      <div class="form-group">
        <%= form.label :role, "New Role", class: "form-label" %>
        <%= form.select :role, options_for_select(User.roles.keys - ['admin']), {}, class: "form-control" %>
      </div>
      <div class="modal-actions">
        <%= form.submit "Update Role", class: "btn btn-primary" %>
        <button type="button" class="btn btn-secondary modal-cancel">Cancel</button>
      </div>
    <% end %>
  </div>
</div>

