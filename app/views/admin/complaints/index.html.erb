<% content_for(:title, "Manage Complaints - Admin - JusticeHub") %>

<div class="admin-page">
  <div class="admin-header">
    <h1>Manage Complaints</h1>
    <p>View and manage all complaints</p>
  </div>

  <div class="filter-bar">
    <%= form_with url: admin_complaints_path, method: :get, local: true do |form| %>
      <div class="filter-group">
        <%= form.select :status, options_for_select(Complaint.statuses.keys, params[:status]), { include_blank: "All Status" }, class: "filter-select" %>
        <%= form.select :type, options_for_select(Complaint.complaint_types.keys, params[:type]), { include_blank: "All Types" }, class: "filter-select" %>
        <%= form.text_field :from_date, placeholder: "From Date", class: "filter-input", type: "date" %>
        <%= form.text_field :to_date, placeholder: "To Date", class: "filter-input", type: "date" %>
        <%= form.submit "Filter", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="complaints-list">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>User</th>
          <th>Type</th>
          <th>Subject</th>
          <th>Amount</th>
          <th>Status</th>
          <th>Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @complaints.each do |complaint| %>
          <tr>
            <td><strong>#<%= complaint.id %></strong></td>
            <td>
              <div class="user-cell">
                <span class="user-name"><%= complaint.user_name %></span>
                <span class="user-email"><%= complaint.user_email %></span>
              </div>
            </td>
            <td><span class="type-badge"><%= complaint.complaint_type.titleize %></span></td>
            <td><%= complaint.subject.truncate(50) %></td>
            <td><%= complaint.amount > 0 ? "â‚¹#{complaint.amount}" : "-" %></td>
            <td>
              <span class="status-badge status-<%= complaint.status %>"><%= complaint.status.titleize %></span>
            </td>
            <td><%= complaint.created_at.strftime("%d %b %Y") %></td>
            <td>
              <div class="action-buttons">
                <%= link_to "View", complaint_path(complaint), class: "btn-action" %>
                <%= link_to "Edit", edit_complaint_path(complaint), class: "btn-action" %>
                <% if complaint.editable? %>
                  <%= link_to "Update Status", "#", class: "btn-action btn-update", data: { id: complaint.id, current: complaint.status } %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Status Update Modal -->
<div id="statusModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Update Complaint Status</h3>
      <span class="close">&times;</span>
    </div>
    <%= form_with url: admin_update_complaint_status_path(0), method: :patch, local: true do |form| %>
      <input type="hidden" name="id" id="complaintId">
      <div class="form-group">
        <%= form.label :status, "New Status", class: "form-label" %>
        <%= form.select :status, options_for_select(Complaint.statuses.keys), {}, class: "form-control" %>
      </div>
      <div class="modal-actions">
        <%= form.submit "Update Status", class: "btn btn-primary" %>
        <button type="button" class="btn btn-secondary modal-cancel">Cancel</button>
      </div>
    <% end %>
  </div>
</div>

<style>
