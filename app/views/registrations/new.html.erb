<% content_for(:title, "Sign Up - JusticeHub") %>

<div class="auth-page">
  <div class="auth-container">
    <div class="auth-header">
      <%= link_to root_path, class: "auth-logo" do %>
        <i class="fas fa-scale-balanced"></i>
        <span>JusticeHub</span>
      <% end %>
      <h1>Create Account</h1>
      <p>Join JusticeHub to file and track complaints</p>
    </div>

    <%= form_with model: @user, url: signup_path, local: true do |form| %>
      <% if @user.errors.any? %>
        <div class="alert alert-error">
          <i class="fas fa-exclamation-circle"></i>
          <%= @user.errors.full_messages.join(", ") %>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, "Full Name", class: "form-label" %>
        <%= form.text_field :name,
                              class: "form-control #{'error' if @user.errors[:name].any?}",
                              placeholder: "Enter your full name",
                              required: true %>
      </div>

      <div class="form-group">
        <%= form.label :email, "Email Address", class: "form-label" %>
        <%= form.email_field :email,
                              class: "form-control #{'error' if @user.errors[:email].any?}",
                              placeholder: "your@email.com",
                              required: true %>
      </div>

      <div class="form-group">
        <%= form.label :phone, "Phone Number", class: "form-label" %>
        <%= form.telephone_field :phone,
                                  class: "form-control #{'error' if @user.errors[:phone].any?}",
                                  placeholder: "+91 XXXXX XXXXX" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Password", class: "form-label" %>
        <%= form.password_field :password,
                                 class: "form-control #{'error' if @user.errors[:password].any?}",
                                 placeholder: "Minimum 6 characters",
                                 required: true %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= form.password_field :password_confirmation,
                                 class: "form-control",
                                 placeholder: "Confirm your password",
                                 required: true %>
      </div>

      <div class="form-actions">
        <%= form.submit "Create Account", class: "btn btn-primary btn-large" %>
      </div>

      <div class="auth-footer">
        <p>Already have an account? <%= link_to "Login", login_path %></p>
      </div>
    <% end %>
  </div>
</div>

<style>
.auth-page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #1a365d 0%, #2d3748 100%);
  padding: 24px;
}

.auth-container {
  background: white;
  padding: 48px;
  border-radius: 16px;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  width: 100%;
  max-width: 420px;
}

.auth-header {
  text-align: center;
  margin-bottom: 32px;
}

.auth-logo {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  font-size: 28px;
  font-weight: 700;
  color: var(--primary-color, #4299e1);
  text-decoration: none;
  margin-bottom: 24px;
}

.auth-logo i {
  font-size: 36px;
}

.auth-header h1 {
  font-size: 28px;
  margin-bottom: 8px;
  color: #1a202c;
}

.auth-header p {
  color: #718096;
}

.form-group {
  margin-bottom: 16px;
}

.form-label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: #4a5568;
  margin-bottom: 8px;
}

.form-control {
  width: 100%;
  padding: 14px 16px;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  font-size: 15px;
  transition: all 0.2s;
}

.form-control:focus {
  outline: none;
  border-color: #4299e1;
  box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.15);
}

.form-control.error {
  border-color: #e53e3e;
}

.form-actions {
  margin-top: 24px;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 14px 24px;
  border-radius: 8px;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
  border: none;
  width: 100%;
}

.btn-primary {
  background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
  color: white;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(66, 153, 225, 0.4);
}

.alert {
  padding: 14px 16px;
  border-radius: 8px;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.alert-error {
  background: #fff5f5;
  color: #c53030;
  border: 1px solid #feb2b2;
}

.auth-footer {
  text-align: center;
  margin-top: 24px;
  padding-top: 24px;
  border-top: 1px solid #e2e8f0;
}

.auth-footer p {
  color: #718096;
}

.auth-footer a {
  color: #4299e1;
  font-weight: 500;
}

.auth-footer a:hover {
  text-decoration: underline;
}
</style>
