<% content_for(:title, "My Profile - JusticeHub") %>

<div class="profile-page">
  <div class="profile-header">
    <h1>My Profile</h1>
  </div>

  <div class="profile-content">
    <div class="profile-card">
      <div class="profile-info">
        <div class="avatar">
          <i class="fas fa-user"></i>
        </div>
        <div class="user-details">
          <h2><%= @user.name %></h2>
          <span class="role-badge <%= @user.role %>"><%= @user.role.titleize %></span>
        </div>
      </div>

      <div class="info-grid">
        <div class="info-item">
          <label>Email</label>
          <span><%= @user.email %></span>
        </div>
        <div class="info-item">
          <label>Phone</label>
          <span><%= @user.phone || "Not provided" %></span>
        </div>
        <div class="info-item">
          <label>Account Status</label>
          <span class="status-badge <%= @user.is_active ? 'active' : 'inactive' %>">
            <%= @user.is_active ? 'Active' : 'Inactive' %>
          </span>
        </div>
        <div class="info-item">
          <label>Member Since</label>
          <span><%= @user.created_at.strftime("%B %Y") %></span>
        </div>
      </div>

      <div class="profile-actions">
        <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

<style>
.profile-page {
  padding: 100px 24px 60px;
  max-width: 800px;
  margin: 0 auto;
}

.profile-header {
  margin-bottom: 32px;
}

.profile-header h1 {
  font-size: 32px;
}

.profile-card {
  background: white;
  padding: 32px;
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.1);
}

.profile-info {
  display: flex;
  align-items: center;
  gap: 24px;
  margin-bottom: 32px;
  padding-bottom: 24px;
  border-bottom: 1px solid #e2e8f0;
}

.avatar {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #4299e1, #3182ce);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36px;
  color: white;
}

.user-details h2 {
  margin-bottom: 8px;
}

.role-badge {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 500;
  text-transform: uppercase;
}

.role-badge.admin { background: #fed7d7; color: #c53030; }
.role-badge.lawyer { background: #e9d8fd; color: #6b46c1; }
.role-badge.staff { background: #fefcbf; color: #975a16; }
.role-badge.user { background: #c6f6d5; color: #276749; }

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
  margin-bottom: 32px;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.info-item label {
  font-size: 13px;
  color: #718096;
  text-transform: uppercase;
}

.info-item span {
  font-size: 16px;
  color: #2d3748;
}

.status-badge.active {
  background: #c6f6d5;
  color: #276749;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
}

.profile-actions {
  text-align: center;
}

.btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 14px 28px;
  border-radius: 8px;
  font-weight: 500;
  text-decoration: none;
  border: none;
  cursor: pointer;
}

.btn-primary {
  background: linear-gradient(135deg, #4299e1, #3182ce);
  color: white;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(66, 153, 225, 0.4);
}
</style>
